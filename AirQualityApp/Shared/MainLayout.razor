@inherits LayoutComponentBase

<PageTitle>AirQualityApp</PageTitle>

<style>
    #info-panel {
        background-color: rgb(0, 120, 255);
        border-radius: 15px;
        padding: 1rem;
        color: #ffffff;
        width: 20%;
        height: 80%;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.05);
        position: absolute;
        z-index: 1000;
        top: 90px;
        right: 10px; 
        overflow-y: auto;
        font-family: Mulish, sans-serif;
        font-weight: 400;
        font-size: 14px;
        line-height: 1.5;
    }
    }

        #info-panel h2 {
